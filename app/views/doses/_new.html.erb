<div class="container">
  <%= simple_form_for [cocktail, dose], html: { class: "form-inline" } do |f| %>
    <div class="row">
      <%= f.association :ingredient, collection: Ingredient.order(:name), label: false, input_html: { class: "select2-dropdown" }, include_hidden: false %>
      <%= f.input :description, label: false, placeholder: 'amount' %>
      <%= f.submit 'Add', class: 'btn btn-primary btn-sm dose-create'%>
    </div>

  <% end %>
</div>
